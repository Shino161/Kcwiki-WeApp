/*引入抽屉菜单样式*/
@import "./components/drawer-menu/index.wxss";
page{
  height: 100%;
  width: 100%;
}
span{
  -webkit-font-smoothing:antialiased;
}
.padding {
  padding:15px;
}

.scroll-view{
  height:100%
}

.content{
  background-color:#edeaea;
  box-sizing: border-box;
  height: 100%;
}

.item-hover{
  background-color: #f5f5f5;
}

.item-right-arrow {
  width: 10px;
  height: 10px;
  border-top: 1px solid #333;
  border-right: 1px solid #333;
  transform: rotate(45deg);
}
.wcapp-title{
  font-size: 17px;
  display: block;
  padding: 10px;
  color: #fff;
  background-color: #3d4456;
}
.wcapp-item-line::after{
  content: '';
  display: block;
  width: 100%;
  height: 1px;
  background-color: #ddd;
  transform: scaleY(0.5);
}
