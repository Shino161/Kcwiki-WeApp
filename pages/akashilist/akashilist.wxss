.page-title{
  font-size: 18px;
  display: block;
  text-align: center;
  font-weight: 500;
  padding: 20px 0px 0px 0px;
}

.page-text{
  font-size: 14px;
  display:block;
  text-align: center;
  padding: 20px 0px;
}

.page-content{
  display: block;
  width: 100%;
  margin: 20px 0;
  background-color: #fff;
}

.content-item{
  padding: 10px 0px 10px 20px;
  border-bottom: 1px solid #ddd;
  display: flex;
  align-items: center;
}

.content-item-hover{
  background-color: #f5f5f5;
}

.content-item-span{
  font-size: 16px;
  color: #333;
  margin-left: 20px;
}


