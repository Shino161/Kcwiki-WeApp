.pop-layer {
  position: absolute;
  background-color: #fff;
  z-index: 2;
  width: 100%;
}
.pop-layer>span{
  display: block;
  text-align: center;
}
.top-select {
  position: relative;
}
.top-select .more-icon {
  position: absolute;
  bottom: 5px;
  left: 50%;
  transform: translate(-50%,0);
  z-index: 2;
  width: 20px;
  height: 20px;
}
.top-select .high-light-bar {
  height: 48px;
  font-size: 16px;
  line-height: 20px;
  text-align: center;
  display: block;
  background-color: #134663;
  color: #fff;
  border-radius: 0px 0px 50% 50%;
}

.title{
  display:block;
  font-size: 18px;
  color:#333;
  padding: 10px;
  text-align: center;
  font-weight: 600;
}

.sub-title{
  position: relative;
  display: block;
  color:#fff;
  display:block;
  font-size: 16px;
  padding: 5px;
  padding-left: 25px;
  background-color:#93a3ca;
}

.sub-title::before{
  content: '';
  display: inline-block;
  width: 7px;
  height: 7px;
  border-radius: 10px;
  position: absolute;
  top: 50%;
  left: 10px;
  transform: translate(0,-50%);
  background-color: #fff;
}

.item-wrapper{
  margin-bottom: 10px;
}
.item{
  background-color: #fff;
  padding: 5px 0px 10px 10px;
  box-shadow: 0px 0px 10px #b2b2b2;
}

.item-content{
  font-size: 14px;
  display: block;
  padding:0;
  margin-top: 5px;
}

.box-wrapper{
  padding: 10px;
}
